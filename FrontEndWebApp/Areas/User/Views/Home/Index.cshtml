<div class="modal fade" id="attempOptionModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"># Options</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="partialOptions"></div>
            </div>
        </div>
    </div>
</div>
<!-- all section end-->
@section Scripts{
    <script>
        $(document).ready(function () {
            $(document).on("click", "#btnDoQuiz", function () {
                var form = $(this).parents('.modal').find('form');
                var d = form.serialize();
                $.ajax({
                    type: "POST",
                    url: "https://localhost:44363/User/Exams/AttempQuiz/?" + d,
                    contentType: 'application/json',
                    data: JSON.stringify(d),
                    success: function (res) {
                        if (res.examID)
                            window.location.replace("https://localhost:44363/User/Exams/DoingQuiz?examID=" + res.examID);
                        else
                            window.location.reload();
                    }
                });
            });
        });
        function openAttempOptionForm(id) {
                var route = '@Url.Action("AttempQuizOptions", "Exams")?examID=' + id;
                $('#partialOptions').load(route);
            };
    </script>
}
