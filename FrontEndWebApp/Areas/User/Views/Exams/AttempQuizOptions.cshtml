@model TN.Data.Entities.Exam
@if (Model.Time == 0)
{
    <div class="row">
        <h5 class="ml-lg-auto mr-lg-auto">You will have unlimited time to finish this exam.</h5>
    </div>
}
else
{
    <div class="row">
        <h5 class="ml-lg-auto mr-lg-auto">You will have @(Model.Time/60) minute(s) once you begin your attemp.</h5>
    </div>
}

<div class="row">
    <h5 class="ml-lg-auto mr-lg-auto">Number of questions: @(Model.Questions.Count)</h5>
</div>
<div class="row">
    <h5 class="ml-lg-auto mr-lg-auto">Good luck!</h5>
</div>
<hr />
<form>
    <div class="form-group row">
        <label for="countdown" class="ml-lg-auto mr-lg-auto d-inline control-label">
            No countdown <input value="true" name="countdown" type="checkbox" id="countdown" class="d-inline" />
        </label>
    </div>
    <div class="row">
        <span class="ml-lg-auto mr-lg-auto text-danger">Check to disable time countdown</span>
    </div>
    <div class="form-group row">
        <input type="hidden" value="@Model.ID" asp-for="ID" class="form-control" />
    </div>
    <div class="row form-group">
        <input id="btnDoQuiz" type="button" value="Attemp quiz now" class="mr-lg-auto ml-lg-auto btn btn-primary" />
    </div>
</form>