@model TN.ViewModels.Catalog.User.LoginModel
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Sign in</title>

    <!-- Custom fonts for this template-->
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet">
    <script async defer crossorigin="anonymous" src="https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v9.0&appId=2364928580469501&autoLogAppEvents=1" nonce="ppQqlDkd"></script>
    <script>
        window.fbAsyncInit = function () {
            FB.init({
                appId: '2364928580469501',
                oauth: true,
                status: true, // check login status
                cookie: true, // enable cookies to allow the server to access the session
                xfbml: true, // parse XFBML
                version: 'v9.0'
            });
            FB.AppEvents.logPageView(); //
        };

        function fb_login() {
            FB.login(function (response) {
                if (response.authResponse != null) {
                    document.getElementById("fbTokenValue").value = response.authResponse.accessToken;
                    document.getElementById("fbProviderValue").value = "Facebook";
                    document.getElementById("external-account").submit();



                    FB.api('/me', function (response) {
                        user_email = response.email; //get user email
                        // you can store this data into your database
                    });
                    //$.ajax({
                    //    type: "POST",
                    //    url: "/Auth/LoginFacebook",
                    //    data: JSON.stringify(response)
                    //    contentType: "application/json; charset=utf-8",
                    //    dataType: "json",
                    //    success: function (result) {
                    //        console.log("post ok");
                    //        if (result.redirectUrl !== undefined) {
                    //            window.location.replace(result.redirectUrl);
                    //        }
                    //    },
                    //    failure: function (response) {
                    //        console.log("post failure");
                    //    },
                    //    error: function (response) {
                    //        console.log("post error");
                    //    }
                    //})

                } else {
                    //user hit cancel button
                    console.log('User cancelled login or did not fully authorize.');
                }
            }, {
                scope: 'public_profile,email'
            });
        }
        (function () {
            var e = document.createElement('script');
            e.src = document.location.protocol + '//connect.facebook.net/en_US/all.js';
            e.async = true;
            document.getElementById('fb-root').appendChild(e);
        }());
    </script>
</head>

<body class="bg-gradient-primary">

    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Welcome Back!</h1>
                                    </div>
                                    <form class="user" asp-action="Login" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                                        <div class="form-group">
                                            <input type="text" asp-for="@Model.UserName" class="form-control form-control-user" placeholder="Enter your username...">
                                            <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <input type="password" asp-for="@Model.Password" class="form-control form-control-user" placeholder="Password">
                                            <span asp-validation-for="@Model.Password" class="text-danger"></span>
                                            <span class="text-danger">@ViewData["msg"]</span>
                                        </div>
                                        <div class="form-group">
                                            <div class="custom-control custom-checkbox small">
                                                <input asp-for="@Model.Rememberme" type="checkbox" class="custom-control-input" id="customCheck">
                                                <label class="custom-control-label" for="customCheck">Remember Me</label>
                                            </div>
                                        </div>
                                        <input type="submit" class="btn btn-primary btn-user btn-block" value="Login" />

                                        <hr>
                                    </form>
                                    <form id="external-account" asp-action="ExternalLogin" asp-controller="Auth" method="post" class="user">
                                        <div>
                                            <input type="hidden" name="token" id="fbTokenValue" />
                                            <input type="hidden" name="provider" id="fbProviderValue" />
                                            <button type="button" onclick="fb_login()" class="btn btn-facebook btn-user btn-block">
                                                <i class="fab fa-facebook-f fa-fw"></i> Login with Facebook
                                            </button>
                                            <button type="submit" name="provider" value="Google" class="btn btn-google btn-user btn-block">
                                                <i class="fab fa-google fa-fw"></i> Login with Google
                                            </button>
                                        </div>
                                    </form>
                                    <hr>
                                    <div class="text-center">
                                        <a asp-controller="Auth" asp-action="ForgotPassword" class="small">Forgot Password?</a>
                                    </div>
                                    <div class="text-center">
                                        <a asp-action="Register" asp-controller="Auth" class="small">Create an Account!</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/js/sb-admin-2.min.js"></script>

</body>

</html>