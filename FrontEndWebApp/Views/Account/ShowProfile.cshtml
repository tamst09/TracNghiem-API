@model TN.ViewModels.Catalog.User.UserViewModel

@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_Layout_Profile.cshtml";
    ViewData["tabNum"] = 1;
}

<h1>Information</h1>
<hr />
<div class="row container">
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="UserName" class="control-label">Username</label>
            <input readonly asp-for="UserName" class="form-control" value="@Model.UserName" />
        </div>
        <div class="form-group">
            <label asp-for="Name" class="control-label">Name</label>
            <input readonly asp-for="Name" class="form-control" value="@Model.Name" />
        </div>
        <div class="form-group">
            <label asp-for="DoB" class="control-label">Birthday</label>
            <input readonly asp-for="DoB" class="form-control" />
        </div>
    </div>
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="PhoneNumber" class="control-label">Phone Number</label>
            <input readonly asp-for="PhoneNumber" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Email" class="control-label">Email Address</label>
            <input readonly asp-for="Email" class="form-control" value="@Model.Email" />
        </div>
    </div>
</div>
<div class="row container">
    <a type="button" class="btn btn-link" asp-action="Index" asp-controller="Home">Homepage</a>
</div>


