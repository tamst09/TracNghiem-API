@using System.Security.Claims
@using Microsoft.AspNetCore.Identity
<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<link href="~/profile/css/profile_styles.css" rel="stylesheet" id="bootstrap-css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<script>
    $(document).ready(function () {
        if (@ViewData["tabNum"]) {
            if (@ViewData["tabNum"]==2) {
                $(".tab").removeClass("active");
                $(".tab2").addClass("active"); 
            }
        }
    })
</script>
@RenderSection("Scripts", required: false)
<div class="container">
    <div class="row profile">
        <div class="col-md-3">
            <div class="profile-sidebar">
                <!-- SIDEBAR USERPIC -->
                <div class="profile-userpic">
                    <img loading="lazy" src="@Global.Avatar_Url" class="img-responsive" alt="Avatar">
                </div>
                <!-- END SIDEBAR USERPIC -->
                <!-- SIDEBAR USER TITLE -->
                <div class="profile-usertitle">
                    <div class="profile-usertitle-name">
                        @(User.Identity.Name)
                    </div>
                    <div class="profile-usertitle-job">
                        @(User.FindFirst(ClaimTypes.GivenName).Value)
                    </div>
                </div>
                <!-- END SIDEBAR USER TITLE -->
                <!-- SIDEBAR BUTTONS -->
                @*<div class="profile-userbuttons">
                        <button type="button" class="btn btn-success btn-sm">Follow</button>
                        <button type="button" class="btn btn-danger btn-sm">Message</button>
                    </div>*@
                <!-- END SIDEBAR BUTTONS -->
                <!-- SIDEBAR MENU -->
                <div class="profile-usermenu">
                    <ul class="nav">
                        <li class="tab tab1 active">
                            <a asp-controller="Account" asp-action="ShowProfile">
                                <i class="glyphicon glyphicon-user"></i>
                                Infomation
                            </a>
                        </li>
                        <li class="tab tab2">
                            <a asp-controller="Account" asp-action="UpdateProfile" asp-route-id="@Int32.Parse(User.FindFirst("UserID").Value)">
                                <i class="glyphicon glyphicon-pencil"></i>
                                Update infomation
                            </a>
                        </li>
                        <li class="tab tab3">
                            <a asp-controller="Account" asp-action="ChangePassword">
                                <i class="glyphicon glyphicon-lock"></i>
                                Change password
                            </a>
                        </li>
                    </ul>
                </div>
                <!-- END MENU -->
            </div>
        </div>
        <div class="col-md-9">
            <div class="profile-content">
                @RenderBody()
            </div>
        </div>
    </div>
</div>
<center>
    <strong>Powered by <a target="_blank">KeenThemes</a></strong>
</center>
