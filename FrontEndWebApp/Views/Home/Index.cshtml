@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    @if (User.Identity.IsAuthenticated)
    {
        <h1 class="display-4">Welcome @User.Identity.Name</h1>
        <h2>You are @ViewData["role"]</h2>
    }
    else
    {
        <h1 class="display-4">You need to log in</h1>
    }
</div>
