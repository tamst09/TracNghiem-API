@model TN.Data.Entities.Category

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<TN.Data.Entities.Exam> exams = new List<TN.Data.Entities.Exam>();
    exams = (List<TN.Data.Entities.Exam>)ViewData["ListExam"];
}

<h1>Details</h1>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CategoryName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CategoryName)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            List exams
        </dt>
        <dd class="col-sm-10">
            @foreach (var item in exams)
            {
                <p class="mb-1">@item.ExamName <span><a asp-action="Details" asp-controller="Exams" asp-route-id="@item.ID">Details</a></span></p>
            }
        </dd>

    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
